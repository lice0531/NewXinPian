<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/denator_del_mainpage"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
     android:orientation="vertical" 
     android:focusable="true"
    android:focusableInTouchMode="true"
     android:background="#ffffff"
    tools:context="android_serialport_api.xingbang.firingdevice.SetDelayTime"
    tools:ignore="MergeRootFrame" >

	<LinearLayout	    
	    android:id="@+id/denator_del_func"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" 
        android:layout_marginTop="0dp"
        >        
        
  </LinearLayout>
 
  <RelativeLayout            
            android:orientation="vertical"           
             android:layout_height="fill_parent"	
            android:layout_below="@+id/denator_del_func"
    		android:layout_width="fill_parent">
        
       <LinearLayout
	        android:layout_width="fill_parent"	       
	        android:gravity="center"
	        android:orientation="vertical" 	       
	        android:layout_height="wrap_content"	
	        >
	        <LinearLayout
		        android:layout_width="fill_parent"	       
		        android:gravity="center"
		        android:orientation="horizontal" 		        
		        android:layout_height="30dp">
		        
			  <TextView  
			   android:layout_width="40dp"  
			   android:layout_height="30dp" 
			   android:gravity="center"	
			   android:textSize="@dimen/childPageBtnFontSize"
			   android:background="@drawable/textview_border"		    
			   android:text="@string/text_help_xuhao"
			  />  
			   
			  <TextView  
			   android:layout_width="60dp"  
			   android:gravity="center"
			   android:layout_height="30dp"  
			   android:background="@drawable/textview_border"
			   android:text="@string/text_help_state"
			   android:textSize="@dimen/childPageBtnFontSize"
			  />  
			  <TextView  
			   android:layout_width="fill_parent"  
			   android:gravity="center"
			   android:layout_height="30dp"  
			   android:background="@drawable/textview_border"
			   android:text="@string/text_help_miaoshu"
			   android:textSize="@dimen/childPageBtnFontSize"
			  />  		    		  
			</LinearLayout> 
	       
		 	<ListView
		       android:layout_width="match_parent"
		       android:scrollbarFadeDuration="0"
               android:fadeScrollbars="false" 
               android:fadingEdge="none"             
               android:divider="#00000000"               
               android:layout_height="match_parent"	     
		   	   android:id="@+id/help_listview"  
    		/> 
    	</LinearLayout> 
    </RelativeLayout>

   </LinearLayout>