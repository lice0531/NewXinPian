<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView15"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:paddingRight="5dp"
            android:text="@string/text_down_htbh"
            android:textSize="@dimen/childPageLabelFontSize" />

        <EditText
            android:id="@+id/dialog_htbh"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:background="@drawable/translucent"
            android:gravity="left"
            android:hint="@string/text_down_htbh"
            android:maxLength="15"
            android:padding="5dp"
            android:textColor="@color/rangle_fc_base"
            android:textSize="@dimen/childPageEditFontSize" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:gravity="left"
            android:text=""
            android:textSize="@dimen/childPageLabelFontSize" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:text="@string/text_xmbh"
            android:textSize="@dimen/childPageLabelFontSize" />

        <EditText
            android:id="@+id/dialog_xmbh"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:background="@drawable/translucent"
            android:gravity="left"
            android:hint="@string/text_xmbh"
            android:maxLength="15"
            android:padding="5dp"
            android:textColor="@color/rangle_fc_base"
            android:textSize="@dimen/childPageEditFontSize" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:gravity="left"
            android:text=""
            android:textSize="@dimen/childPageLabelFontSize" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:paddingRight="5dp"
            android:text="@string/text_dwdm"
            android:textSize="@dimen/childPageLabelFontSize" />

        <EditText
            android:id="@+id/dialog_dwdm"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:background="@drawable/translucent"
            android:gravity="left"
            android:hint="@string/text_dwdm"
            android:maxLength="15"
            android:padding="5dp"
            android:textColor="@color/rangle_fc_base"
            android:textSize="@dimen/childPageEditFontSize" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:gravity="left"
            android:text=""
            android:textSize="@dimen/childPageLabelFontSize" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/fac_ll_2"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_below="@id/fac_ll_1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView7"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:paddingRight="5dp"
            android:text="@string/text_tv_jwd1"
            android:textSize="@dimen/childPageLabelFontSize" />

        <EditText
            android:id="@+id/dialog_jwd"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:background="@drawable/translucent"
            android:gravity="left"
            android:hint="@string/text_tv_jwd1"
            android:padding="5dp"
            android:textColor="@color/rangle_fc_base"
            android:textSize="@dimen/childPageEditFontSize" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:gravity="left"
            android:text=""
            android:textSize="@dimen/childPageLabelFontSize" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/fac_ll_3"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_below="@id/fac_ll_2"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:paddingRight="5dp"
            android:text="@string/text_down_sfz"
            android:textSize="@dimen/childPageLabelFontSize" />

        <EditText
            android:id="@+id/dialog_sfz"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:background="@drawable/translucent"
            android:gravity="left"
            android:hint="@string/text_down_sfz"
            android:maxLength="18"
            android:padding="5dp"
            android:textColor="@color/rangle_fc_base"
            android:textSize="@dimen/childPageEditFontSize" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:gravity="left"
            android:text=""
            android:textSize="@dimen/childPageLabelFontSize" />
    </LinearLayout>



</LinearLayout>