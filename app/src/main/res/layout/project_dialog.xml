<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/pd_ll_choice"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_marginTop="5dp">

        <TextView
            android:layout_width="@dimen/delaytime_pg_left"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:text="是否选中该项目"
            android:textSize="18sp"
            android:gravity="left"
            style="@style/alltextstyle"/>

        <com.suke.widget.SwitchButton
            android:id="@+id/sw_choice"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.2"
            android:padding="5dp"
           />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:gravity="left"
            android:text=""
            android:textSize="@dimen/childReisterPageLabelFontSize" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/pd_ll_name"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_marginTop="5dp">

        <TextView
            android:layout_width="@dimen/delaytime_pg_left"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:gravity="right"
            android:text="项目名称"
            android:textSize="18sp"
            style="@style/alltextstyle"/>

        <EditText
            android:id="@+id/et_name"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:background="@drawable/translucent"
            android:gravity="left"
            android:hint="项目名称"
            android:maxLength="20"
            android:padding="5dp"
            android:textSize="18sp"
            style="@style/alltextstyle"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:gravity="left"
            android:text=""
            android:textSize="@dimen/childReisterPageLabelFontSize" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/pd_ll_htbh"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_marginTop="5dp">

        <TextView
            android:layout_width="@dimen/delaytime_pg_left"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:gravity="right"
            android:text="合同编号"
            android:textSize="18sp"
            style="@style/alltextstyle"/>

        <EditText
            android:id="@+id/et_htbh"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:background="@drawable/translucent"
            android:gravity="left"
            android:hint="合同编号"
            android:inputType="number"
            android:maxLength="15"
            android:digits="0123456789"
            android:padding="5dp"
            android:textSize="18sp"
            style="@style/alltextstyle" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:gravity="left"
            android:text=""
            android:textSize="@dimen/childReisterPageLabelFontSize" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/pd_ll_xmbh"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_marginTop="5dp">

        <TextView
            android:layout_width="@dimen/delaytime_pg_left"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:gravity="right"
            android:text="项目编号"
            android:textSize="18sp"
            style="@style/alltextstyle"/>

        <EditText
            android:id="@+id/et_xmbh"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:background="@drawable/translucent"
            android:gravity="left"
            android:hint="项目编号"
            android:maxLength="15"
            android:digits="1234567890QWERTYUIOPASDFGHJKLZXCVBNM"
            android:padding="5dp"
            android:textSize="18sp"
            style="@style/alltextstyle" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:gravity="left"
            android:text=""
            android:textSize="@dimen/childReisterPageLabelFontSize" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/pd_ll_dwdm"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_marginTop="5dp">

        <TextView
            android:layout_width="@dimen/delaytime_pg_left"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:gravity="right"
            android:text="单位代码"
            android:textSize="18sp"
            style="@style/alltextstyle"/>

        <EditText
            android:id="@+id/et_dwdm"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:background="@drawable/translucent"
            android:gravity="left"
            android:hint="单位代码"
            android:maxLength="13"
            android:inputType="number"
            android:digits="0123456789"
            android:padding="5dp"
            android:textSize="18sp"
            style="@style/alltextstyle" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:gravity="left"
            android:text=""
            android:textSize="@dimen/childReisterPageLabelFontSize" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/pd_ll_sfz"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_marginTop="5dp">

        <TextView
            android:layout_width="@dimen/delaytime_pg_left"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:gravity="right"
            android:text="身份证号"
            android:textSize="18sp"
            style="@style/alltextstyle"/>

        <EditText
            android:id="@+id/et_sfz"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:background="@drawable/translucent"
            android:gravity="left"
            android:hint="身份证号"
            android:maxLength="18"
            android:digits="0123456789X"
            android:padding="5dp"
            android:textSize="18sp"
            style="@style/alltextstyle"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:gravity="left"
            android:text=""
            android:textSize="@dimen/childReisterPageLabelFontSize" />
    </LinearLayout>


</LinearLayout>