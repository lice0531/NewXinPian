<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">

    <LinearLayout
        android:id="@+id/fac_ll_1"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:paddingRight="5dp"
            android:text="@string/text_systip_4"
            android:textSize="@dimen/childPageLabelFontSize" />

        <EditText
            android:id="@+id/factoryname"
            android:layout_width="10dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:background="@drawable/translucent"
            android:gravity="left"
            android:hint="@string/text_systip_4"
            android:maxLength="30"
            android:padding="5dp"
            android:textColor="@color/rangle_fc_base"
            android:textSize="@dimen/childPageEditFontSize" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="left"
            android:text=""
            android:textSize="@dimen/childPageLabelFontSize" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/fac_ll_2"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_below="@id/fac_ll_1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:paddingRight="5dp"
            android:text="@string/text_systip_5"
            android:textSize="@dimen/childPageLabelFontSize" />

        <EditText
            android:id="@+id/factorycode"
            android:layout_width="10dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:background="@drawable/translucent"
            android:gravity="left"
            android:hint="@string/text_systip_5"
            android:maxLength="3"
            android:padding="5dp"
            android:textColor="@color/rangle_fc_base"
            android:textSize="@dimen/childPageEditFontSize" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="left"
            android:text=""
            android:textSize="@dimen/childPageLabelFontSize" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/fac_ll_3"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_below="@id/fac_ll_2"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:paddingRight="5dp"
            android:text="@string/text_systip_6"
            android:textSize="@dimen/childPageLabelFontSize" />

        <EditText
            android:id="@+id/factoryfea"
            android:layout_width="10dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:background="@drawable/translucent"
            android:gravity="left"
            android:hint="@string/text_systip_6"
            android:maxLength="1"
            android:padding="5dp"
            android:textColor="@color/rangle_fc_base"
            android:textSize="@dimen/childPageEditFontSize" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="left"
            android:text=""
            android:textSize="@dimen/childPageLabelFontSize" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/fac_ll_4"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:layout_below="@id/fac_ll_3"
        android:layout_marginBottom="15dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:gravity="right"
            android:paddingLeft="9dp"
            android:paddingRight="5dp"
            android:text="@string/text_systip_7"
            android:textSize="@dimen/childPageLabelFontSize" />

        <CheckBox
            android:id="@+id/factoryselected"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="3"
            android:button="@drawable/trade_checkbox_style"
            android:gravity="left"

            android:maxLength="2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="left"
            android:text=""
            android:textSize="@dimen/childPageLabelFontSize" />
    </LinearLayout>


</RelativeLayout>