<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:id="@+id/denator_del_mainpage"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical"
	android:focusable="true"
	android:focusableInTouchMode="true"
	android:background="#ffffff"
	tools:context="android_serialport_api.xingbang.firingdevice.SetDelayTime"
	tools:ignore="MergeRootFrame">
	<com.google.android.material.appbar.AppBarLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:theme="@style/AppTheme.AppBarOverlay">

		<androidx.appcompat.widget.Toolbar
			android:id="@+id/toolbar"
			android:layout_width="match_parent"
			android:layout_height="?attr/actionBarSize"
			android:background="?attr/colorPrimary"
			app:popupTheme="@style/AppTheme.PopupOverlay"
			app:titleTextColor="@color/white" />

	</com.google.android.material.appbar.AppBarLayout>
	<LinearLayout	    
	    android:id="@+id/denator_del_func"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" 
        android:layout_marginTop="10dp"
        > 
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="50dp" 
            android:divider="@drawable/spacer_medium"
	        android:showDividers="middle"  
	        android:orientation="horizontal"
            android:gravity="center_horizontal"             
            > 
              <Button
	            android:id="@+id/btn_user_main_exit"
	            android:layout_width="80dp"
	            android:layout_height="40dp"
	            android:gravity="center"
	            android:textColor="@color/bt_fg_base"
	        	android:background="@drawable/bt_mainpage_style"
	            android:textSize="@dimen/childReisterPageBtnFontSize" 
	            android:text="@string/text_return" />
	        <Button
	            android:id="@+id/btn_user_main_save"
	            android:layout_width="80dp"
	            android:layout_height="40dp"
	            android:gravity="center"
	            android:textColor="@color/bt_fg_base"
	        	android:background="@drawable/bt_mainpage_style"
	            android:textSize="@dimen/childReisterPageBtnFontSize"            
	            android:text="@string/text_btn_add" />
        </LinearLayout> 
             
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="40dp"   
            android:layout_marginTop="5dp"          
            > 
            <TextView
                 android:layout_width="@dimen/delaytime_pg_left"
                android:layout_height="wrap_content"
                android:layout_weight="1"                
                android:text="@string/text_user_username"
               android:gravity="right"  
               android:layout_marginRight="5dp"
                android:textSize="@dimen/childReisterPageLabelFontSize"           
            />
			 <EditText
				android:id="@+id/user_name"
				android:layout_width="10dp"
				android:layout_height="wrap_content"					
				android:maxLength="10"
				android:gravity="left" 
				android:layout_weight="5"		
				 android:numeric="integer"	
				 android:padding="5dp"
				 android:background="@drawable/translucent" 			
			    android:textColor="@color/rangle_fc_base"
			    android:textSize="@dimen/childPageEditFontSize"  
				android:hint="@string/text_user_username"
			/>
		    <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"                
                android:text=""   
               android:gravity="left"  
                android:textSize="@dimen/childReisterPageLabelFontSize"           
            />
        </LinearLayout>
          <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="40dp"   
            android:layout_marginTop="5dp"          
            > 
            <TextView
                 android:layout_width="@dimen/delaytime_pg_left"
                android:layout_height="wrap_content"
                android:layout_weight="1"                
                android:text="@string/text_user_password"
               android:gravity="right"  
               android:layout_marginRight="5dp"
                android:textSize="@dimen/childReisterPageLabelFontSize"           
            />
			 <EditText
				android:id="@+id/user_pw"
				android:layout_width="10dp"
				android:layout_height="wrap_content"					
				android:maxLength="20"
				android:gravity="left" 
				android:layout_weight="5"		
				 android:numeric="integer"	
				 android:padding="5dp"
				 android:background="@drawable/translucent" 			
			    android:textColor="@color/rangle_fc_base"
			    android:textSize="@dimen/childPageEditFontSize"  
				android:hint="@string/text_user_password"
			/>
		    <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"                
                android:text=""   
               android:gravity="left"  
                android:textSize="@dimen/childReisterPageLabelFontSize"           
            />
        </LinearLayout>
        
  </LinearLayout>
 
  <RelativeLayout            
            android:orientation="vertical"           
             android:layout_height="fill_parent"	
            android:layout_below="@+id/denator_del_func"
    		android:layout_width="fill_parent">
        
       <LinearLayout
	        android:layout_width="fill_parent"	       
	        android:gravity="center"
	        android:orientation="vertical" 	       
	        android:layout_height="wrap_content"	
	        >
	        <LinearLayout
		        android:layout_width="fill_parent"	       
		        android:gravity="center"
		        android:orientation="horizontal" 		        
		        android:layout_height="30dp">
		        
			  <TextView  
			   android:layout_width="150dp"  
			   android:layout_height="30dp" 
			   android:gravity="center"	
			   android:textSize="@dimen/childPageBtnFontSize"
			   android:background="@drawable/textview_border"		    
			   android:text="@string/text_user_username"
			  />  
			   
			  <TextView  
			   android:layout_width="fill_parent"  
			   android:gravity="center"
			   android:layout_height="30dp"  
			   android:background="@drawable/textview_border"
			   android:text="@string/text_user_password"
			   android:textSize="@dimen/childPageBtnFontSize"
			  />  		  
			</LinearLayout> 
	       
		 	<ListView
		       android:layout_width="match_parent"
		       android:scrollbarFadeDuration="0"
               android:fadeScrollbars="false" 
               android:fadingEdge="none"             
               android:divider="#00000000"               
               android:layout_height="match_parent"	     
		   	   android:id="@+id/setenv_user_listview"  
    		/> 
    	</LinearLayout> 
    </RelativeLayout>

   </LinearLayout>