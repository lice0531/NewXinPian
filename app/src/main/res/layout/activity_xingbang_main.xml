<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="android_serialport_api.xingbang.firingdevice.XingbangMain"
    tools:ignore="MergeRootFrame"
    android:orientation="vertical"
    android:background="@drawable/bg">
    <include
        android:id="@+id/totalbar"
        layout="@layout/title_layout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay"
        android:visibility="gone">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay"
            app:titleTextColor="@color/white" />

    </com.google.android.material.appbar.AppBarLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:visibility="visible">


                <TextView
                    android:id="@+id/tv_main_no"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="6"
                    android:text="设备编号："
                    android:textColor="#ffffff"
                    android:textSize="30sp" />
                <TextView
                    android:id="@+id/tv_main_version"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="版本"
                    android:textColor="#ffffff"
                    android:visibility="gone"
                    android:textSize="20sp" />

            </LinearLayout>


            <!--<com.suke.widget.SwitchButton-->
            <!--android:id="@+id/switch_button"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_marginTop="10dp"/>-->

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="70dp"
            android:layout_marginTop="15dp"
            android:divider="@drawable/spacer_medium"
            android:gravity="center"
            android:showDividers="middle">

            <Button
                android:id="@+id/btn_main_delayTime"
                android:layout_width="@dimen/main_BT_Width"
                android:layout_height="@dimen/main_BT_Height"
                android:background="@drawable/bt_mainpage_style"
                android:gravity="center"
                android:text="1.单发检测"
                android:visibility="gone"
                android:textColor="@color/bt_fg_base"
                android:textSize="@dimen/mainpageFontSize" />

            <Button
                android:id="@+id/btn_main_reister"
                android:layout_width="@dimen/main_BT_Width"
                android:layout_height="@dimen/main_BT_Height"
                android:background="@drawable/bt_mainpage_style"
                android:gravity="center"
                android:text="1.注册"
                android:textColor="@color/bt_fg_base"
                android:textSize="@dimen/mainpageFontSize" />

            <Button
                android:id="@+id/btn_main_downWorkCode"
                android:layout_width="@dimen/main_BT_Width"
                android:layout_height="@dimen/main_BT_Height"
                android:background="@drawable/bt_mainpage_style"
                android:enabled="true"
                android:gravity="center"
                android:text="2.项目管理"
                android:textColor="@color/bt_fg_base"
                android:textSize="@dimen/mainpageFontSize"
                android:visibility="visible" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="70dp"
            android:layout_marginTop="15dp"
            android:divider="@drawable/spacer_medium"
            android:gravity="center"
            android:visibility="gone"
            android:showDividers="middle">

            <Button
                android:id="@+id/btn_main_test"
                android:layout_width="@dimen/main_BT_Width"
                android:layout_height="@dimen/main_BT_Height"
                android:background="@drawable/bt_mainpage_style"
                android:gravity="center"
                android:text="4.网络测试"
                android:visibility="visible"
                android:textColor="@color/bt_fg_base"
                android:textSize="@dimen/mainpageFontSize" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="70dp"
            android:layout_marginTop="15dp"
            android:divider="@drawable/spacer_medium"
            android:gravity="center"
            android:showDividers="middle">

            <Button
                android:id="@+id/btn_main_blast"
                android:layout_width="@dimen/main_BT_Width"
                android:layout_height="@dimen/main_BT_Height"

                android:background="@drawable/bt_mainpage_style"
                android:gravity="center"
                android:visibility="gone"
                android:text="5.起爆"
                android:textColor="@color/bt_fg_base"
                android:textSize="@dimen/mainpageFontSize" />

            <Button
                android:id="@+id/btn_wxjl"
                android:layout_width="@dimen/main_BT_Width"
                android:layout_height="@dimen/main_BT_Height"
                android:background="@drawable/bt_mainpage_style"
                android:gravity="center"
                android:text="3.无线级联"
                android:textColor="@color/bt_fg_base"
                android:textSize="@dimen/mainpageFontSize" />

            <Button
                android:id="@+id/btn_main_query"
                android:layout_width="@dimen/main_BT_Width"
                android:layout_height="@dimen/main_BT_Height"
                android:background="@drawable/bt_mainpage_style"
                android:gravity="center"
                android:text="4.查看"
                android:textColor="@color/bt_fg_base"
                android:textSize="@dimen/mainpageFontSize" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="70dp"
            android:layout_marginTop="15dp"
            android:divider="@drawable/spacer_medium"
            android:gravity="center"
            android:showDividers="middle">

            <Button
                android:id="@+id/btn_main_setevn"
                android:layout_width="@dimen/main_BT_Width"
                android:layout_height="@dimen/main_BT_Height"
                android:background="@drawable/bt_mainpage_style"
                android:gravity="center"
                android:text="5.设置"
                android:textColor="@color/bt_fg_base"
                android:textSize="@dimen/mainpageFontSize" />

            <Button
                android:id="@+id/btn_main_del"
                android:layout_width="@dimen/main_BT_Width"
                android:layout_height="@dimen/main_BT_Height"
                android:background="@drawable/bt_mainpage_style"
                android:gravity="center"
                android:text="6.删除"
                android:textColor="@color/bt_fg_base"
                android:textSize="@dimen/mainpageFontSize" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="70dp"
            android:layout_marginTop="15dp"
            android:divider="@drawable/spacer_medium"
            android:gravity="center"
            android:showDividers="middle">

            <Button
                android:id="@+id/btn_main_help"
                android:layout_width="@dimen/main_BT_Width"
                android:layout_height="@dimen/main_BT_Height"
                android:background="@drawable/bt_mainpage_style"
                android:gravity="center"
                android:text="7.辅助功能"
                android:textColor="@color/bt_fg_base"
                android:textSize="@dimen/mainpageFontSize" />


            <Button
                android:id="@+id/btn_main_exit"
                android:layout_width="@dimen/main_BT_Width"
                android:layout_height="@dimen/main_BT_Height"
                android:background="@drawable/bt_mainpage_style"
                android:gravity="center"
                android:text="8.退出"
                android:textColor="@color/bt_fg_base"
                android:textSize="@dimen/mainpageFontSize" />

            <Button
                android:id="@+id/btn_main_exit2"
                android:layout_width="@dimen/main_BT_Width"
                android:layout_height="@dimen/main_BT_Height"
                android:background="@drawable/bt_mainpage_style"
                android:gravity="center"
                android:text="@string/xingbang_main_page_btn_exit"
                android:textColor="@color/bt_fg_base"
                android:textSize="@dimen/mainpageFontSize"
                android:visibility="gone" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:divider="@drawable/spacer_medium"
            android:gravity="center"
            android:showDividers="middle"
            android:visibility="gone">

            <Button
                android:id="@+id/btn_main_lianxi"
                android:layout_width="@dimen/main_BT_Width"
                android:layout_height="@dimen/main_BT_Height"
                android:background="@drawable/bt_mainpage_style"
                android:gravity="center"
                android:text="实验"
                android:textColor="@color/bt_fg_base"
                android:textSize="@dimen/mainpageFontSize" />

        </LinearLayout>

    </LinearLayout>


</LinearLayout>

