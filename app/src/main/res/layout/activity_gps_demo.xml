<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relative"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white"
    tools:context=".activity.GpsDemoActivity">


    <View
        android:id="@+id/devided_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/action_bar_devided_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/green_btn_color_disable">

        <include
            android:id="@+id/totalbar"
            layout="@layout/title_layout" />

        <LinearLayout
            android:layout_marginTop="2dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.5"
            android:background="@color/color_white">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="使用项目"
            style="@style/alltextstyle"/>
        </LinearLayout>
        <com.baidu.mapapi.map.MapView
            android:id="@+id/map_view"
            android:layout_marginTop="2dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="8"
            android:layout_below="@id/devided_line"
             />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4"
            >

            <TextView
                android:id="@+id/gps_tv_jingdu"
                style="@style/alltextstyle"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="经度:124.557"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.03"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.13" />

            <TextView
                style="@style/alltextstyle"
                android:id="@+id/gps_tv_weidu"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="纬度:14.924"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.75"
                app:layout_constraintStart_toEndOf="@+id/gps_tv_jingdu"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.134" />

            <TextView
                android:id="@+id/gps_tv_tip"
                style="@style/alltextstyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="当前在准爆区域内,可以正常起爆!"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.502"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/gps_btn_saveGps"
                style="@style/allbtntstyle"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:textSize="18sp"
                android:text="保存当前位置"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.887" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="62dp"
        android:layout_gravity="center"
        android:background="@color/color_layout"
        android:layout_marginTop="57dp"
        android:gravity="center"
        android:visibility="gone"
        >

        <Button
            android:id="@+id/one_location"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp8"
            android:layout_marginTop="@dimen/dp12"
            android:layout_marginRight="@dimen/dp8"
            android:layout_marginBottom="@dimen/dp12"
            android:layout_weight="1"
            android:background="@drawable/custom_change_btn"
            android:gravity="center"
            android:text="@string/start_one_Loc"
            android:textColor="#ffffff"
            android:textSize="18sp" />

        <Button
            android:id="@+id/continuous_location"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp8"
            android:layout_marginTop="@dimen/dp12"
            android:layout_marginRight="@dimen/dp8"
            android:layout_marginBottom="@dimen/dp12"
            android:layout_weight="1"
            android:background="@drawable/custom_change_btn"
            android:gravity="center"
            android:text="@string/start_continue_Loc"
            android:textColor="#ffffff"
            android:textSize="18sp" />
    </LinearLayout>

    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/poi_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="@dimen/dp15"
        android:layout_marginTop="300dp"
        android:layout_marginRight="@dimen/dp15"
        android:layout_marginBottom="15dp"
        android:background="#D9ffffff"
        android:gravity="center_horizontal">

        <LinearLayout
            android:id="@+id/tile_tv"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp35"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="0dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/one_Loc_tile"
                android:textColor="#3E3D3D"
                android:textFontWeight="12"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/continue_Loc_tile"
                android:textColor="#3E3D3D"
                android:textFontWeight="12"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>

        <View
            android:id="@+id/line_view"
            android:layout_width="@dimen/dp330"
            android:layout_height="1px"
            android:layout_below="@id/tile_tv"
            android:layout_centerHorizontal="true"
            android:background="#B3BCBABA" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/line_view"
            android:layout_marginTop="@dimen/dp10"
            android:orientation="horizontal">

            <ScrollView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/one_loc_tv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="@dimen/dp10"
                    android:lineSpacingExtra="@dimen/dp3"
                    android:paddingTop="@dimen/dp5"
                    android:textColor="@color/color_black"
                    android:textFontWeight="12"
                    android:textSize="13sp" />

            </ScrollView>

            <ScrollView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/continuoue_loc_tv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="@dimen/dp10"
                    android:lineSpacingExtra="@dimen/dp3"
                    android:paddingTop="@dimen/dp5"
                    android:textColor="@color/color_black"
                    android:textFontWeight="12"
                    android:textSize="13sp" />

            </ScrollView>
        </LinearLayout>

    </RelativeLayout>




</RelativeLayout>