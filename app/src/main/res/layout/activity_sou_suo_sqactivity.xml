<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".firingdevice.SouSuoSQActivity">
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay"
        >

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay"
            app:titleTextColor="@color/white" />

    </com.google.android.material.appbar.AppBarLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <EditText
            android:id="@+id/edit_gkm"
            android:layout_width="300dp"
            android:layout_height="match_parent"/>
        <Button
            android:id="@+id/ss_btn_ss"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="搜索"
            style="@style/allbtntstyle"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">
        <TextView
            android:background="@drawable/textview_border"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="序号"
            style="@style/alltextstyle"
            android:textSize="18sp"/>
        <TextView
            android:background="@drawable/textview_border"
            android:layout_weight="2"
            android:id="@+id/tv_lg_uid"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="管壳码"
            style="@style/alltextstyle"
            android:textSize="18sp"/>
        <TextView
            android:background="@drawable/textview_border"
            android:layout_weight="1.5"
            android:id="@+id/tv_lg_yxq"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="有效期"
            style="@style/alltextstyle"
            android:textSize="18sp"/>
        <TextView
            android:background="@drawable/textview_border"
            android:layout_weight="1"
            android:id="@+id/tv_lg_qb"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="状态"
            style="@style/alltextstyle"
            android:textSize="18sp"/>
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/re_ss"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:listitem="@layout/item_shouquan"/>
</LinearLayout>