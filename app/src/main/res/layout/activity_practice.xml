<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_practice"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/child_pg_bg"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    >

    <LinearLayout
        android:id="@+id/ll_firing_4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:focusable="true"
        android:focusableInTouchMode="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                style="@style/alltextstyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="测试当前电流"
                android:textSize="25sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp">

            <TextView
                style="@style/alltextstyle"
                android:layout_width="@dimen/test_pg_Left"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end"
                android:text="当前电流" />

            <TextView
                android:id="@+id/tv_ceshi_dianliu"
                style="@style/alltextstyle"
                android:layout_width="@dimen/test_pg_middle"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:gravity="end"
                android:text="0.0μA" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left"
                android:text=""
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp">

            <TextView
                style="@style/alltextstyle"
                android:layout_width="@dimen/test_pg_Left"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end"
                android:text="当前电压" />

            <TextView
                android:id="@+id/tv_ceshi_dianya"
                style="@style/alltextstyle"
                android:layout_width="@dimen/test_pg_middle"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:gravity="end"
                android:text="0.0V" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left"
                android:textSize="20sp" />
        </LinearLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="80dp">

            <Button
                android:id="@+id/but_pre"
                style="@style/allbtntstyle"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:layout_marginStart="90dp"
                android:text="开始测试" />

        </RelativeLayout>

        <Button
            android:id="@+id/but_test"
            android:visibility="gone"
            style="@style/allbtntstyle"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:text="测试页面" />

        <View
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:layout_marginTop="10dp"
            android:background="@color/label_color" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <TextView
                style="@style/alltextstyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="数据协同功能"
                android:textSize="25sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_android_ip"
                style="@style/alltextstyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="本机ip" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    style="@style/alltextstyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="输入要发送设备的IP地址" />

                <EditText
                    android:id="@+id/text_setvice_ip"
                    style="@style/alltextstyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:hint="IP地址" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/but_receive"
                    style="@style/allbtntstyle"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:text="接收数据" />

                <Button
                    android:id="@+id/but_lianjie"
                    style="@style/allbtntstyle"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="20dp"
                    android:layout_weight="1"
                    android:text="连接"
                    android:visibility="gone"/>

                <Button
                    android:id="@+id/but_send"
                    style="@style/allbtntstyle"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="20dp"
                    android:layout_weight="1"
                    android:text="发送数据" />
            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:layout_marginTop="10dp"
            android:background="@color/label_color" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:visibility="gone">

            <Button
                android:id="@+id/but_write"
                style="@style/allbtntstyle"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:layout_marginStart="90dp"
                android:text="导出雷管到本地" />

        </RelativeLayout>

        <TextView
            style="@style/alltextstyle"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="选择要读取的文件" />

        <TextView
            android:id="@+id/text_filePath"
            style="@style/alltextstyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="文件路径" />

        <Button
            android:id="@+id/btn_openFile"
            style="@style/allbtntstyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:text="打开文件管理器" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:visibility="visible">

            <Button
                android:id="@+id/btn_read"
                style="@style/allbtntstyle"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:layout_marginStart="90dp"
                android:text="读取雷管" />



        </RelativeLayout>
        <Button
            android:id="@+id/btn_read_log"
            style="@style/allbtntstyle"
            android:visibility="invisible"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:text="分析日志" />
    </LinearLayout>

</ScrollView>
