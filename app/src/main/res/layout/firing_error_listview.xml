<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".firingdevice.TestDenatorActivity" >
    <TextView
        android:id="@+id/dialog_tip"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/alltextstyle"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/ll_dialog_err"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/X_item_no"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/textview_border"
            style="@style/alltextstyle"
            android:textSize="15sp"
            android:text="序号" />
        <TextView
            android:id="@+id/X_item_duanNo"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/textview_border"
            style="@style/alltextstyle"
            android:textSize="15sp"
            android:text="孔号" />
        <TextView
            android:id="@+id/X_item_quyu"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/textview_border"
            style="@style/alltextstyle"
            android:textSize="15sp"
            android:text="区域" />
        <TextView
            android:id="@+id/X_item_shellno"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2.5"
            android:gravity="center"
            style="@style/alltextstyle"
            android:background="@drawable/textview_border"
            android:textSize="15sp"
            android:text="管壳码" />
        <TextView
            android:id="@+id/X_item_delay"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            style="@style/alltextstyle"
            android:background="@drawable/textview_border"
            android:textSize="15sp"
            android:text="延时" />
        <TextView
            android:id="@+id/X_item_errorname"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center"
            style="@style/alltextstyle"
            android:background="@drawable/textview_border"
            android:textSize="15sp"
            android:text="错误" />
    </LinearLayout>
    <ListView
        android:id="@+id/X_listview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
    </ListView>

</LinearLayout>
