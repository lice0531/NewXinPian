<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/setDelayTimeMainPage"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/child_pg_bg"
    android:fillViewport="true"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    tools:context="android_serialport_api.xingbang.firingdevice.SetDelayTime"
    tools:ignore="MergeRootFrame">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/AppTheme.AppBarOverlay">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="?attr/colorPrimary"
                app:popupTheme="@style/AppTheme.PopupOverlay"
                app:titleTextColor="@color/white" />

        </com.google.android.material.appbar.AppBarLayout>
        <LinearLayout
            android:paddingTop="1dip"
            android:id="@+id/ly_setUpdata"
            android:layout_width="fill_parent"
            android:layout_height="300dp"
            android:layout_marginTop="5dp"
            android:orientation="vertical"
            >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:divider="@drawable/spacer_medium"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:showDividers="middle">

                <Button
                    android:id="@+id/btn_setDelayTime_return"
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/bt_mainpage_style"
                    android:gravity="center"
                    android:text="@string/text_return"
                    style="@style/allbtntstyle" />

                <Button
                    android:id="@+id/btn_setDelayTime_inputOK"
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/bt_mainpage_style"
                    android:gravity="center"
                    android:text="@string/text_sure"
                    style="@style/allbtntstyle" />
                <Button
                    android:id="@+id/btn_setDelayTime_suidao"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/bt_mainpage_style"
                    android:gravity="center"
                    android:text="隧道设置"
                    style="@style/allbtntstyle"  />
            </LinearLayout>

            <TableLayout
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="45dp">

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="3"
                        android:text="@string/text_delay_startnum"
                        style="@style/alltextstyle" />

                    <EditText
                        android:id="@+id/setDelayTime_FirstNo"
                        android:layout_width="0dp"
                        android:layout_height="35dp"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="5"
                        android:background="@drawable/translucent"
                        android:gravity="left"
                        android:hint="@string/text_delay_startnum"
                        android:maxLength="3"
                        android:numeric="integer"
                        android:padding="5dp"
                        style="@style/alltextstyle" />
                    <TextView
                        android:layout_weight="0.5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:text=""
                        style="@style/alltextstyle" />
                </TableRow>


                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginTop="8dp">

                    <TextView
                        android:text="@string/text_delay_endnum"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="3"
                        style="@style/alltextstyle"/>

                    <EditText
                        android:id="@+id/setDelayTime_EndNo"
                        android:layout_width="0dp"
                        android:layout_height="35dp"
                        android:layout_weight="5"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/translucent"
                        android:gravity="left"
                        android:hint="@string/text_delay_endnum"
                        android:maxLength="3"
                        android:numeric="integer"
                        android:padding="5dp"
                        style="@style/alltextstyle" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:gravity="left"
                        android:text=""
                        style="@style/alltextstyle" />
                </TableRow>


            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="45dp"
                android:layout_marginTop="8dp">

                <TextView
                    android:text="@string/text_delay_det_num"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="3"
                    style="@style/alltextstyle"/>

                <EditText
                    android:id="@+id/setDelayTime_holedetonator"
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    android:layout_weight="5"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/translucent"
                    android:gravity="left"
                    android:hint="@string/text_delay_det_num"
                    android:maxLength="3"
                    android:numeric="integer"
                    android:padding="5dp"
                    style="@style/alltextstyle" />

                <TextView
                    android:id="@+id/textView11"
                    style="@style/alltextstyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:gravity="center"
                    android:text="@string/text_unit_fa" />
            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="45dp"
                android:layout_marginTop="8dp">

                <TextView
                    android:text="@string/text_delay_start"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="3"
                    style="@style/alltextstyle"/>

                <EditText
                    android:id="@+id/setDelayTime_startDelaytime"
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    android:layout_weight="5"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/translucent"
                    android:gravity="left"
                    android:hint="@string/text_delay_start"
                    android:maxLength="6"
                    android:numeric="integer"
                    android:padding="5dp"
                    style="@style/alltextstyle" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_weight="0.5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/text_unit_hm"
                    style="@style/alltextstyle" />
            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="45dp"
                android:layout_marginTop="8dp">

                <TextView
                    android:text="@string/text_delay_kong_de"
                    android:id="@+id/textView2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="3"
                    style="@style/alltextstyle"/>

                <EditText
                    android:id="@+id/setDelayTime_holein_Delaytime"
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    android:layout_weight="5"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/translucent"
                    android:gravity="left"
                    android:hint="@string/text_delay_kong_de"
                    android:maxLength="6"
                    android:numeric="integer"
                    android:padding="5dp"
                    style="@style/alltextstyle" />

                <TextView
                    android:layout_weight="0.5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/text_unit_hm"
                    style="@style/alltextstyle"/>
            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="45dp"
                android:layout_marginTop="8dp">

                <TextView
                    android:text="@string/text_delay_kong_2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="3"
                    style="@style/alltextstyle"/>

                <EditText
                    android:id="@+id/setDelayTime_holemiddle_Delaytime"
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    android:layout_weight="5"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/translucent"
                    android:gravity="left"
                    android:hint="@string/text_delay_kong_2"
                    android:maxLength="6"
                    android:numeric="integer"
                    android:padding="5dp"
                    style="@style/alltextstyle" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_weight="0.5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/text_unit_hm"
                    style="@style/alltextstyle"/>
            </TableRow>
            </TableLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/setDelayTime_tipinfo_fragement"
            android:layout_width="fill_parent"
            android:layout_height="27dp"
            android:layout_below="@+id/ly_setUpdata"
            android:gravity="center">

            <TextView
                android:id="@+id/setDelayTime_deAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left"
                android:text="@string/text_delay_total"
                style="@style/alltextstyle" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_below="@+id/setDelayTime_tipinfo_fragement"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="30dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="55dp"
                        android:layout_height="30dp"
                        android:background="@drawable/textview_border"
                        android:gravity="center"
                        android:text="@string/text_list_Serial"
                        style="@style/alltextstyle"/>

                    <TextView
                        android:layout_width="60dp"
                        android:layout_height="30dp"
                        android:background="@drawable/textview_border"
                        android:gravity="center"
                        android:text="@string/text_list_duan"
                        style="@style/alltextstyle"/>

                    <TextView
                        android:layout_width="70dp"
                        android:layout_height="30dp"
                        android:background="@drawable/textview_border"
                        android:gravity="center"
                        android:text="@string/text_list_delay"
                        style="@style/alltextstyle"/>

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="30dp"
                        android:background="@drawable/textview_border"
                        android:gravity="center"
                        android:text="@string/text_list_guan"
                        style="@style/alltextstyle"/>
                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/setDelayMainlistView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:divider="#00000000"
                    android:dividerHeight="1dp"
                    android:fadeScrollbars="false"

                    android:fadingEdge="none"
                    android:scrollbarFadeDuration="0" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</ScrollView>