<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/denator_del_mainpage"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    tools:ignore="MergeRootFrame">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_marginTop="15dp">

        <LinearLayout
            android:id="@+id/radioGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <CheckBox
                android:id="@+id/rbtn_danling"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@drawable/black"
                android:text="丹灵" />
            <CheckBox
                android:id="@+id/rbtn_zbw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@drawable/black"
                android:text="中爆网" />
            <CheckBox
                android:id="@+id/rbtn_cs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@drawable/black"
                android:text="测试网址" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/denator_del_func"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="25dp"
            android:layout_marginTop="15dp">

            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="中爆IP地址"
                android:textColor="@drawable/black"
                android:textSize="@dimen/childReisterPageLabelFontSize" />

            <EditText
                android:id="@+id/server_ip"
                android:layout_width="10dp"
                android:layout_height="40dp"
                android:layout_weight="6"
                android:background="@drawable/translucent"
                android:gravity="left"
                android:hint="服务器地址"
                android:maxLength="20"
                android:padding="5dp"
                android:textColor="@color/rangle_fc_base"
                android:textSize="@dimen/childPageEditFontSize" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left"
                android:text=""
                android:textSize="@dimen/childReisterPageLabelFontSize" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="25dp"
            android:layout_marginTop="15dp">

            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="中爆端口"
                android:textColor="@drawable/black"
                android:textSize="@dimen/childReisterPageLabelFontSize" />

            <EditText
                android:id="@+id/server_port"
                android:layout_width="10dp"
                android:layout_height="40dp"
                android:layout_weight="6"
                android:background="@drawable/translucent"
                android:gravity="left"
                android:hint="端口"
                android:maxLength="20"
                android:padding="5dp"
                android:textColor="@color/rangle_fc_base"
                android:textSize="@dimen/childPageEditFontSize" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left"
                android:text=""
                android:textSize="@dimen/childReisterPageLabelFontSize" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/denator_danling_func"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:gravity="center">
            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="丹灵地址"
                android:textColor="@drawable/black"
                android:textSize="@dimen/childReisterPageLabelFontSize" />

            <TextView
                android:id="@+id/server_http"
                android:layout_width="10dp"
                android:layout_height="match_parent"
                android:layout_weight="6"
                android:background="@drawable/translucent"
                android:gravity="left"
                android:hint="服务器地址"
                android:maxLength="300"
                android:padding="5dp"
                android:textColor="@color/rangle_fc_base"
                android:textSize="@dimen/childPageEditFontSize" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left"
                android:text=""
                android:textSize="@dimen/childReisterPageLabelFontSize" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/denator_danling_cs"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:gravity="center">
        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="测试地址"
            android:textColor="@drawable/black"
            android:textSize="@dimen/childReisterPageLabelFontSize" />

        <TextView
            android:id="@+id/server_http_cs"
            android:layout_width="10dp"
            android:layout_height="match_parent"
            android:layout_weight="6"
            android:background="@drawable/translucent"
            android:gravity="left"
            android:hint="服务器地址"
            android:maxLength="300"
            android:padding="5dp"
            android:textColor="@color/rangle_fc_base"
            android:textSize="@dimen/childPageEditFontSize" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="left"
            android:text=""
            android:textSize="@dimen/childReisterPageLabelFontSize" />
    </LinearLayout>

</LinearLayout>