<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/denator_del_mainpage"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/child_pg_bg"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    tools:context="android_serialport_api.xingbang.firingdevice.SetDelayTime"
    tools:ignore="MergeRootFrame">
    <include
        android:id="@+id/totalbar"
        layout="@layout/title_layout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay"
        android:visibility="gone">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay"
            app:titleTextColor="@color/white" />

    </com.google.android.material.appbar.AppBarLayout>
    <LinearLayout
        android:id="@+id/denator_del_func"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:visibility="gone"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:divider="@drawable/spacer_medium"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:showDividers="middle">

            <Button
                android:id="@+id/btn_del_return"
                style="@style/allbtntstyle"
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:text="@string/text_return" />
        </LinearLayout>

        <TextView
            android:id="@+id/tx_total"
            style="@style/alltextstyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:text="@string/text_total" />
        <Button
            android:id="@+id/btn_paixu"
            style="@style/allbtntstyle"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_marginStart="200dp"
            android:background="@drawable/bt_mainpage_style"
            android:text="@string/text_query_px"
            android:textSize="18sp"
            android:visibility="visible" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/denator_del_func"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    style="@style/alltextstyle"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="30dp"
                    android:background="@drawable/textview_border"
                    android:gravity="center"
                    android:text="@string/text_list_Serial"
                    android:textSize="18sp" />

                <TextView
                    style="@style/alltextstyle"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="30dp"
                    android:background="@drawable/textview_border"
                    android:gravity="center"
                    android:text="@string/text_list_piace"
                    android:textSize="18sp" />
                <TextView
                    style="@style/alltextstyle"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="30dp"
                    android:background="@drawable/textview_border"
                    android:gravity="center"
                    android:text="@string/text_list_kong"
                    android:textSize="18sp" />


                <TextView
                    style="@style/alltextstyle"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="30dp"
                    android:background="@drawable/textview_border"
                    android:gravity="center"
                    android:text="@string/text_list_delay"
                    android:textSize="@dimen/childPageLabelFontSize" />
                <LinearLayout
                    android:id="@+id/re_gkm"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="30dp"
                    android:background="@drawable/textview_border">
                    <TextView
                        android:id="@+id/text_gkm1"
                        style="@style/alltextstyle"
                        android:gravity="right"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="30dp"
                        android:text="@string/text_dialog_gkm"
                        android:textSize="@dimen/childPageLabelFontSize"/>
                    <TextView
                        android:id="@+id/text_gkm2"
                        style="@style/alltextstyle"
                        android:gravity="left"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="30dp"
                        android:text="/UID"
                        android:textSize="@dimen/childPageLabelFontSize"/>
                </LinearLayout>


                <TextView
                    style="@style/alltextstyle"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="30dp"
                    android:background="@drawable/textview_border"
                    android:gravity="center"
                    android:text="@string/text_list_state"
                    android:textSize="@dimen/childPageLabelFontSize" />
            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/denator_query_listview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbarFadeDuration="0"
                android:scrollbars="none"
                android:listSelector="@drawable/listview_color_selector"/>
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>