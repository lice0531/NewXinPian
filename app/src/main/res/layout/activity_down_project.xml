<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    tools:context=".activity.DownProjectActivity">

    <android_serialport_api.xingbang.custom.WatermarkView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            android:id="@+id/totalbar"
            layout="@layout/title_layout" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.2"
                android:visibility="visible">

                <TextView
                    style="@style/alltextstyle"
                    android:layout_width="@dimen/downworkcode_pg_left"
                    android:layout_height="match_parent"
                    android:layout_weight="1.5"
                    android:text="使用项目/合同:"
                    android:textSize="17sp" />

                <AutoCompleteTextView
                    android:id="@+id/down_at_project_name"
                    style="@style/alltextstyle"
                    android:layout_width="10dp"
                    android:layout_height="match_parent"
                    android:layout_weight="5"
                    android:background="@drawable/translucent"
                    android:gravity="center_vertical"
                    android:hint="选择项目"
                    android:padding="5dp" />

                <Button
                    android:id="@+id/btn_clear_project_name"
                    style="@style/allbtntstyle"
                    android:layout_width="48dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/icon_forward"
                    android:visibility="visible" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.3"
                android:background="@color/color_zhuce1" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <!-- 管壳号-->
                <TextView
                    android:id="@+id/tv_shellBlastNo"
                    style="@style/alltextstyle"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:background="@drawable/a_bg_border_blue_1dp"
                    android:text="管壳码" />

                <TextView
                    android:id="@+id/tv_youxiaoqi"
                    style="@style/alltextstyle"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.5"
                    android:background="@drawable/a_bg_border_blue_1dp"
                    android:text="有效期" />

                <TextView
                    android:id="@+id/tv_zhuangtai"
                    style="@style/alltextstyle"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/a_bg_border_blue_1dp"
                    android:text="状态" />
            </LinearLayout>
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/zcl_rl_lg_rv"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="6"
            android:listSelector="@drawable/listview_color_selector"
            android:scrollbarFadeDuration="0"
            android:scrollbars="none"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="145dp" />

        <LinearLayout
            android:id="@+id/linearLayout9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/dp_btn_xiazai"
                style="@style/allbtntstyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_weight="1"
                android:onClick="onClick"
                android:text="下载项目" />

            <Button
                android:id="@+id/btn_down_offline"
                style="@style/allbtntstyle"
                android:layout_width="0dp"
                android:onClick="onClick"
                android:layout_height="wrap_content"
                android:layout_marginRight="30dp"
                android:layout_weight="1"
                android:text="离线下载" />
        </LinearLayout>
    </LinearLayout>
</FrameLayout>