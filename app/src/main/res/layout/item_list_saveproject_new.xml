<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/fl_project"
    android:descendantFocusability="blocksDescendants"
    android:layout_height="wrap_content"
    android:background="@drawable/blue_light_style"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ly_sq"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="10dp">

            <TextView
                android:id="@+id/tv_sp_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="北京"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_gsxz"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/colorBlue"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/cbIsSelected"
                android:layout_width="wrap_content"
                android:visibility="gone"
                android:layout_gravity="center_vertical"
                android:layout_height="match_parent"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/gray_light_layout"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/ll_item_xmxx"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <LinearLayout
                        android:id="@+id/ll_htid"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="7dp"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/alltextstyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/text_tv_htbh"
                            android:textColor="@color/text_content"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/tv_sp_htbh"
                            style="@style/alltextstyle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="合同编号"
                            android:textColor="@color/black"
                            android:textSize="18sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_xmid"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="7dp"
                        android:layout_marginRight="7dp"
                        android:layout_marginBottom="7dp"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/alltextstyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/text_tv_xmbh"
                            android:textColor="@color/text_content"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/tv_sp_xmbh"
                            style="@style/alltextstyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="项目编号"
                            android:textColor="@color/black"
                            android:textSize="18sp" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_item_dwxx"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="7dp"
                    android:layout_marginRight="7dp"
                    android:layout_marginBottom="7dp"
                    android:orientation="horizontal"
                    android:visibility="visible">

                    <TextView
                        style="@style/alltextstyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/text_tv_dwdm"
                        android:textColor="@color/text_content"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/tv_sp_dwdm"
                        style="@style/alltextstyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="单位代码"
                        android:textColor="@color/black"
                        android:textSize="18sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="7dp"
                    android:layout_marginRight="7dp"
                    android:layout_marginBottom="7dp"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/alltextstyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/text_tv_jwd"
                        android:textColor="@color/text_content"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/tv_sp_coordxy"
                        style="@style/alltextstyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/text_tv_jwd"
                        android:textColor="@color/black"
                        android:textSize="18sp" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="7dp"
                    android:layout_marginRight="7dp"
                    android:layout_marginBottom="7dp"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/alltextstyle"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="@string/text_tv_sfz"
                        android:textColor="@color/text_content"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/tv_sp_sfz"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <Button
                    android:id="@+id/btn_del_name"
                    style="@style/allbtntstyle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:background="#E5E5E5"
                    android:ems="1"
                    android:text="@string/text_dialog_sc"
                    android:textColor="#FF0000"
                    android:visibility="gone" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_used"
        android:layout_width="53dp"
        android:layout_height="50dp"
        android:layout_gravity="bottom|right"
        android:scaleType="fitXY"
        android:alpha="0.8"
        android:src="@drawable/icon_usering"
        android:visibility="gone" />

</FrameLayout>
