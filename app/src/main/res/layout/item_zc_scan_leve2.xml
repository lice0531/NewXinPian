<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item2_ll"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/item2_no"
            style="@style/alltextstyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="1-1-1"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/item2_id"
            style="@style/alltextstyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:text="5390418050001"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/item2_delay"
            style="@style/alltextstyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.8"
            android:text="0"
            android:textSize="18sp" />

        <TextView
            android:visibility="gone"
            android:id="@+id/item2_status"
            style="@style/alltextstyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.8"
            android:text="正常"
            android:textSize="18sp" />
        <ImageView
            android:id="@+id/im_xiugai2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:background="@drawable/icon_xiugai"
            />

        <CheckBox
            android:id="@+id/kong_check"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:focusable="false"
            android:visibility="gone"
            />
    </LinearLayout>
</LinearLayout>