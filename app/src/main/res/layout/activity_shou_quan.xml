<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".firingdevice.ShouQuanActivity">
    <include
        android:id="@+id/totalbar"
        layout="@layout/title_layout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:visibility="gone"/>
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/sq_appBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay"

        >

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay"
            app:titleTextColor="@color/white" />

    </com.google.android.material.appbar.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/ll_bar"
        android:layout_below ="@+id/sq_appBar">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_sq_ysy"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="未使用:"
                style="@style/alltextstyle"
                android:textSize="18sp"/>
            <TextView
                android:id="@+id/tv_sq_wsy"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="已使用:"
                style="@style/alltextstyle"
                android:textSize="18sp"/>
            <Button
                android:id="@+id/btn_ss_px"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="排序"
                style="@style/allbtntstyle"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">
            <TextView
                android:background="@drawable/textview_border"
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="UID"
                style="@style/alltextstyle"
                android:textSize="18sp"/>
            <TextView
                android:background="@drawable/textview_border"
                android:layout_weight="1"
                android:id="@+id/tv_lg_uid"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="有效期"
                style="@style/alltextstyle"
                android:textSize="18sp"/>
            <TextView
                android:background="@drawable/textview_border"
                android:layout_weight="1"
                android:id="@+id/tv_lg_yxq"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="工作码"
                style="@style/alltextstyle"
                android:textSize="18sp"/>
            <TextView
                android:background="@drawable/textview_border"
                android:layout_weight="1"
                android:id="@+id/tv_lg_qb"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="状态"
                style="@style/alltextstyle"
                android:textSize="18sp"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below ="@+id/ll_bar"
        android:layout_above="@+id/lay_bottom">

        <com.scwang.smartrefresh.layout.SmartRefreshLayout
            android:id="@+id/refreshLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.scwang.smartrefresh.layout.header.ClassicsHeader
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_chakan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/transparent"
                android:overScrollMode="never"
                tools:listitem="@layout/item_shouquan" />

            <com.scwang.smartrefresh.layout.footer.ClassicsFooter
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </com.scwang.smartrefresh.layout.SmartRefreshLayout>

    </LinearLayout>
    <!--底部-->
    <LinearLayout
        android:id="@+id/lay_bottom"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="@color/colorPrimary"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_check_all"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:foreground="@drawable/bg_white"
            android:gravity="center"
            android:text="全选"
            android:textColor="@color/white"
            style="@style/alltextstyle"
             />
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            android:background="@color/app_bg_color" />

        <TextView
            android:id="@+id/tv_input"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:foreground="@drawable/bg_white"
            android:gravity="center"
            android:text="注册"
            android:textColor="@color/white"
            style="@style/alltextstyle" />
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            android:background="@color/app_bg_color" />

        <TextView
            android:id="@+id/tv_delete"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:foreground="@drawable/bg_white"
            android:gravity="center"
            android:text="删除"
            android:textColor="@color/color_red"
            style="@style/alltextstyle" />
    </LinearLayout>
</RelativeLayout >