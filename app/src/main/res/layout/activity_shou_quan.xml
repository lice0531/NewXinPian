<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".firingdevice.ShouQuanActivity">
    <include
        android:id="@+id/totalbar"
        layout="@layout/title_layout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_sq_ysy"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="未使用:"
                style="@style/alltextstyle"
                android:textSize="18sp"/>
            <TextView
                android:id="@+id/tv_sq_wsy"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="已使用:"
                style="@style/alltextstyle"
                android:textSize="18sp"/>
            <Button
                android:id="@+id/btn_ss_px"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="排序"
                style="@style/allbtntstyle"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">
            <TextView
                android:background="@drawable/textview_border"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="序号"
                style="@style/alltextstyle"
                android:textSize="18sp"/>
            <TextView
                android:background="@drawable/textview_border"
                android:layout_weight="2"
                android:id="@+id/tv_lg_uid"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="管壳码"
                style="@style/alltextstyle"
                android:textSize="18sp"/>
            <TextView
                android:background="@drawable/textview_border"
                android:layout_weight="1.5"
                android:id="@+id/tv_lg_yxq"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="有效期"
                style="@style/alltextstyle"
                android:textSize="18sp"/>
            <TextView
                android:background="@drawable/textview_border"
                android:layout_weight="1"
                android:id="@+id/tv_lg_qb"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="状态"
                style="@style/alltextstyle"
                android:textSize="18sp"/>
        </LinearLayout>
    </LinearLayout>

    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/refreshLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.scwang.smartrefresh.layout.header.ClassicsHeader
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_chakan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:overScrollMode="never"
            tools:listitem="@layout/item_shouquan" />

        <com.scwang.smartrefresh.layout.footer.ClassicsFooter
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </com.scwang.smartrefresh.layout.SmartRefreshLayout>

</LinearLayout >