<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
    <EditText 
        android:id="@+id/blast_shellBlastNo_field"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
      
        android:hint="@string/blast_shellBlastNo_field"/>
    
    <EditText
        android:id="@+id/blast_delay_field"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/blast_shellBlastNo_field"
        android:hint="@string/blast_delay_field"
        />

</RelativeLayout>