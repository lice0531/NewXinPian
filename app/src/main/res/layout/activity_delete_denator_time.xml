<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/denator_del_mainpage"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/child_pg_bg"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    tools:context="android_serialport_api.xingbang.firingdevice.SetDelayTime"
    tools:ignore="MergeRootFrame">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay"
        >

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay"
            app:titleTextColor="@color/white" />

    </com.google.android.material.appbar.AppBarLayout>
    <LinearLayout
        android:id="@+id/denator_del_func"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="55dp"
            android:divider="@drawable/spacer_medium"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:showDividers="middle">

            <Button
                android:id="@+id/btn_all_del"
                android:layout_width="130dp"
                android:layout_height="45dp"
                android:layout_marginRight="10dp"
                android:text="@string/text_del_all"
                style="@style/allbtntstyle" />

            <Button
                android:id="@+id/btn_error_del"
                android:layout_width="150dp"
                android:layout_height="45dp"
                android:layout_marginRight="10dp"
                android:text="@string/text_del_err"
                style="@style/allbtntstyle" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="55dp"
            android:divider="@drawable/spacer_medium"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:showDividers="middle">

            <Button
                android:id="@+id/btn_serialNo_del"
                android:layout_width="130dp"
                android:layout_height="45dp"
                android:layout_marginRight="10dp"
                android:text="@string/text_del_ser"
                style="@style/allbtntstyle"/>
            <!-- Button
               android:id="@+id/btn_del_clear"
               android:layout_width="70dp"
               android:layout_height="40dp"
               android:gravity="center"
               android:textColor="@color/bt_fg_base"
               android:background="@drawable/bt_mainpage_style"
               android:textSize="@dimen/childReisterPageBtnFontSize"
               android:text="清空" /-->
            <Button
                android:id="@+id/btn_del_return"
                android:layout_width="150dp"
                android:layout_height="45dp"
                android:layout_marginRight="10dp"
                android:text="@string/text_return"
                style="@style/allbtntstyle"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="45dp"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:gravity="right|center"
                android:paddingTop="2dp"
                android:text="@string/text_del_start"
                style="@style/alltextstyle"/>

            <EditText
                android:id="@+id/setDelayTime_FirstNo"
                android:layout_width="10dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:background="@drawable/translucent"
                android:gravity="left|center"
                android:hint="@string/text_del_start"
                android:maxLength="3"
                android:padding="5dp"
                android:digits="1234567890"
                android:inputType="number"
                style="@style/alltextstyle" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:gravity="right|center"
                android:paddingTop="2dp"
                android:text="@string/text_del_end"
                style="@style/alltextstyle"/>

            <EditText
                android:id="@+id/setDelayTime_EndNo"
                android:layout_width="10dp"
                android:layout_height="match_parent"
                android:layout_marginRight="20dp"
                android:layout_weight="3"
                android:background="@drawable/translucent"
                android:gravity="left|center"
                android:hint="@string/text_del_end"
                android:maxLength="3"
                android:padding="5dp"
                android:digits="1234567890"
                android:inputType="number"
                style="@style/alltextstyle"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/denator_del_func"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="5dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:background="@drawable/textview_border"
                    android:gravity="center"
                    android:text="@string/text_list_Serial"
                    style="@style/alltextstyle" />

                <TextView
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:background="@drawable/textview_border"
                    android:text="@string/text_list_kong"
                    style="@style/alltextstyle"/>

                <TextView
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:background="@drawable/textview_border"
                    android:text="@string/text_list_delay"
                    style="@style/alltextstyle"/>

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="30dp"
                    android:background="@drawable/textview_border"
                    android:text="@string/text_list_guan"
                    style="@style/alltextstyle" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="30dp"
                    android:background="@drawable/textview_border"
                    android:text="@string/text_list_state"
                    style="@style/alltextstyle"/>
            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/denator_del_listview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fadeScrollbars="false"
                android:fadingEdge="none"
                android:scrollbarFadeDuration="0" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>