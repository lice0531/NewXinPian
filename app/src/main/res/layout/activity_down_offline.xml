<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="android_serialport_api.xingbang.firingdevice.DownOfflineActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/AppTheme.AppBarOverlay">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="?attr/colorPrimary"
                app:popupTheme="@style/AppTheme.PopupOverlay"
                app:titleTextColor="@color/white" />

        </com.google.android.material.appbar.AppBarLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ly_setUpdata"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="vertical"
                android:visibility="visible">

                <TextView
                    style="@style/alltextstyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="本功能用于在网站下载的TXT密码文档生成一条新的下载记录"
                    android:textSize="18sp" />

                <LinearLayout
                    android:id="@+id/ll_1"
                    android:layout_width="fill_parent"
                    android:layout_height="35dp"
                    android:layout_marginTop="5dp">

                    <TextView
                        android:id="@+id/textView12"
                        style="@style/alltextstyle"
                        android:layout_width="@dimen/downworkcode_pg_left"
                        android:layout_height="match_parent"
                        android:layout_marginRight="5dp"
                        android:layout_weight="1"
                        android:text="合同编号" />

                    <AutoCompleteTextView
                        android:id="@+id/df_at_htid"
                        style="@style/alltextstyle"
                        android:layout_width="10dp"
                        android:layout_height="match_parent"
                        android:layout_weight="5"
                        android:background="@drawable/translucent"
                        android:digits="0123456789"
                        android:gravity="center_vertical"
                        android:hint="15位数字"
                        android:inputType="number"
                        android:maxLength="15"
                        android:padding="5dp"

                        />

                    <Button
                        android:id="@+id/btn_clear_htid"
                        style="@style/allbtntstyle"
                        android:layout_width="48dp"
                        android:layout_height="wrap_content"
                        android:text="清空"
                        android:visibility="invisible" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_2"
                    android:layout_width="fill_parent"
                    android:layout_height="35dp"
                    android:layout_marginTop="5dp">

                    <TextView
                        style="@style/alltextstyle"
                        android:layout_width="@dimen/downworkcode_pg_left"
                        android:layout_height="match_parent"
                        android:layout_marginRight="5dp"
                        android:layout_weight="1"
                        android:text="项目编号" />

                    <AutoCompleteTextView
                        android:id="@+id/df_at_xmbh"
                        style="@style/alltextstyle"
                        android:layout_width="10dp"
                        android:layout_height="match_parent"
                        android:layout_weight="5"
                        android:background="@drawable/translucent"
                        android:digits="1234567890QWERTYUIOPASDFGHJKLZXCVBNM"
                        android:gravity="center_vertical"
                        android:hint="15位数字或字母"
                        android:inputType="textNoSuggestions"
                        android:maxLength="15"
                        android:padding="5dp"
                        android:text="" />

                    <Button
                        android:id="@+id/btn_clear_xmbh"
                        style="@style/allbtntstyle"
                        android:layout_width="48dp"
                        android:layout_height="wrap_content"
                        android:text="清空"
                        android:visibility="invisible" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_3"
                    android:layout_width="fill_parent"
                    android:layout_height="35dp"
                    android:layout_marginTop="5dp">

                    <TextView
                        android:id="@+id/textView13"
                        style="@style/alltextstyle"
                        android:layout_width="@dimen/downworkcode_pg_left"
                        android:layout_height="match_parent"
                        android:layout_marginRight="5dp"
                        android:layout_weight="1"
                        android:text="单位代码" />

                    <AutoCompleteTextView
                        android:id="@+id/df_at_dwdm"
                        style="@style/alltextstyle"
                        android:layout_width="10dp"
                        android:layout_height="match_parent"
                        android:layout_weight="5"
                        android:background="@drawable/translucent"
                        android:digits="1234567890"
                        android:gravity="center_vertical"
                        android:hint="13位数字"
                        android:inputType="number"
                        android:maxLength="13"
                        android:padding="5dp" />

                    <Button
                        android:id="@+id/btn_clear_dwdm"
                        style="@style/allbtntstyle"
                        android:layout_width="48dp"
                        android:layout_height="wrap_content"
                        android:text="清空"
                        android:visibility="invisible" />
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/ll_5"
                    android:layout_width="fill_parent"
                    android:layout_height="35dp"
                    android:layout_marginTop="5dp">

                    <TextView
                        style="@style/alltextstyle"
                        android:layout_width="@dimen/downworkcode_pg_left"
                        android:layout_height="match_parent"
                        android:layout_marginRight="5dp"
                        android:layout_weight="1"
                        android:text="身份证号" />

                    <AutoCompleteTextView
                        android:id="@+id/df_at_bprysfz"
                        style="@style/alltextstyle"
                        android:layout_width="10dp"
                        android:layout_height="match_parent"
                        android:layout_weight="5"
                        android:background="@drawable/translucent"
                        android:digits="0123456789X"
                        android:gravity="center_vertical"
                        android:hint="爆破人员身份证"
                        android:inputType="textNoSuggestions"
                        android:maxLength="18"
                        android:padding="5dp"
                        android:textSize="18sp"
                        android:enabled="false"/>

                    <Button
                        android:id="@+id/btn_clear_sfz"
                        style="@style/allbtntstyle"
                        android:layout_width="48dp"
                        android:layout_height="wrap_content"
                        android:text="清空"
                        android:visibility="invisible" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    style="@style/alltextstyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:text="1.请输入在网站获取的6位密码" />

                <EditText
                    android:id="@+id/edit_mima"
                    style="@style/alltextstyle"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:hint="6位密码"
                    android:maxLength="6"
                    android:inputType="number" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    style="@style/alltextstyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="2.通过二维码获取离线文档" />
                <Button
                    android:id="@+id/btn_scan"
                    style="@style/allbtntstyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:text="打开摄像头扫码" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    style="@style/alltextstyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="3.选择从网站下载的txt文件" />

                <Button
                    android:id="@+id/btn_openFile"
                    style="@style/allbtntstyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:text="打开文件管理器" />

                <TextView
                    android:id="@+id/text_filePath"
                    style="@style/alltextstyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="文件路径" />

                <Button
                    android:id="@+id/btn_OK"
                    style="@style/allbtntstyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:text="确定" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</ScrollView>
