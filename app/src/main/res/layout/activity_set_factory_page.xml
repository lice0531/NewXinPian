<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/child_pg_bg"
    android:orientation="vertical"
    tools:context="android_serialport_api.xingbang.firingdevice.SetFactoryActivity"
    tools:ignore="MergeRootFrame">
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay"
            app:titleTextColor="@color/white" />

    </com.google.android.material.appbar.AppBarLayout>
    <LinearLayout
        android:id="@+id/setFactoryBasePage"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="40dp">

            <TextView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:text="@string/text_fac_factory_name"
                android:textSize="@dimen/childPageLabelFontSize" />

            <EditText
                android:id="@+id/setFactory_Name"
                android:layout_width="10dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:background="@drawable/translucent"
                android:gravity="left"
                android:layout_marginRight="20dp"

                android:maxLength="20"
                android:padding="5dp"
                android:textColor="@color/rangle_fc_base"
                android:textSize="@dimen/childPageEditFontSize" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="40dp">

            <TextView
                android:id="@+id/textView14"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:text="@string/text_fac_factory_num"
                android:textSize="@dimen/childPageLabelFontSize" />

            <EditText
                android:id="@+id/setFactory_Code"
                android:layout_width="10dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:background="@drawable/translucent"
                android:gravity="left"
                android:layout_marginRight="20dp"
                android:maxLength="2"
                android:inputType="number"
                android:padding="5dp"
                android:hint="只能输入数字"
                android:textColor="@color/rangle_fc_base"
                android:textSize="@dimen/childPageEditFontSize" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="40dp">

            <TextView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:text="@string/text_fac_code"
                android:textSize="@dimen/childPageLabelFontSize" />

            <EditText
                android:id="@+id/setFactory_Feature"
                android:layout_width="10dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:background="@drawable/translucent"
                android:gravity="left"
                android:layout_marginRight="20dp"
                android:hint="只能输入数字和大写字母"
                android:maxLength="30"
                android:padding="5dp"
                android:digits="1234567890QWERTYUIOPASDFGHJKLZXCVBNM"
                android:textColor="@color/rangle_fc_base"
                android:textSize="@dimen/childPageEditFontSize" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="40dp">

            <TextView
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:gravity="right"
                android:paddingLeft="5dp"
                android:text="@string/text_fac_default"
                android:textSize="@dimen/childPageLabelFontSize" />

            <CheckBox
                android:id="@+id/setFactory_isSelected"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_weight="3"
                android:button="@drawable/trade_checkbox_style"
                android:gravity="left"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left"
                android:text=""
                android:textSize="@dimen/childPageLabelFontSize" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/childReisterPageLineHeight"
            android:gravity="center">

            <Button
                android:id="@+id/btn_factory_return"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/bt_mainpage_style"
                android:gravity="center"
                android:text="@string/text_return"
                android:textColor="@color/bt_fg_base"
                android:textSize="@dimen/childReisterPageBtnFontSize" />

            <Button
                android:id="@+id/btn_factory_inputOk"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/bt_mainpage_style"
                android:gravity="center"
                android:text="@string/text_sure"
                android:textColor="@color/bt_fg_base"
                android:textSize="@dimen/childReisterPageBtnFontSize" />
        </LinearLayout>


    </LinearLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/setFactoryBasePage"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_marginTop="3dp"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_height="match_parent"
                    android:background="@drawable/textview_border"
                    android:gravity="center"
                    android:text="@string/text_list_factory_name" />

                <TextView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/textview_border"
                    android:gravity="center"
                    android:textSize="13sp"
                    android:text="@string/text_list_fac_num" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:background="@drawable/textview_border"
                    android:gravity="center"
                    android:text="@string/text_list_fac_code" />

                <TextView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/textview_border"
                    android:gravity="center"
                    android:text="@string/text_list_check" />


            </LinearLayout>

            <ListView
                android:id="@+id/factory_listView"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>